{
  "Logging": {
    "LogLevel": {
      "Default": "Information",

      // ✅ Development: keep Microsoft logs at Information (helps debug EF, MVC, routing)
      // ❌ Production: change this to "Warning" (reduce noise from framework logs)
      "Microsoft": "Information",

      // ✅ EF Core SQL logs
      // Development: "Information" → logs actual SQL queries
      // Production:   keep "Warning" (only logs slow queries or issues)
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",

      // EF Core infrastructure (model building, connection lifecycle)
      "Microsoft.EntityFrameworkCore.Infrastructure": "Warning"
    }
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DbConnection": "Server=DEEPAK-PC\\SQLEXPRESS;Database=Company;Trusted_Connection=True;TrustServerCertificate=True;"
  },

  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          // ✅ Development: Clean output with only CorrelationId + message
          // ❌ Production: You can keep this or even disable console logs
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} (CorrelationId={CorrelationId}){NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          // ✅ File logs → Keep detailed logs (with all properties) for debugging
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}

