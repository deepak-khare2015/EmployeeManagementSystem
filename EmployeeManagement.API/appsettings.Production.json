{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning", // reduce Microsoft noise
        "Microsoft.Hosting.Lifetime": "Information", // keep lifecycle logs or  Show app start/stop events
        "Microsoft.EntityFrameworkCore": "Warning", // prevent EF query spam
        "System": "Warning", // ignore runtime spam
        "EmployeeManagement": "Information" // keep your app at Info

        // ‚úÖ EF Core SQL logs
        // Development: "Information" ‚Üí logs actual SQL queries
        // Production:   keep "Warning" (only logs slow queries or issues)
        //"Microsoft.EntityFrameworkCore.Database.Command": "Information",

        // EF Core infrastructure (model building, connection lifecycle)
        //"Microsoft.EntityFrameworkCore.Infrastructure": "Warning"

      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          // ‚úÖ Cleaner console logs
          // ‚úÖ Development: Clean output with only CorrelationId + message
          // ‚ùå Production: You can keep this or even disable console logs
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} (CorrelationId={CorrelationId}){NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          // ‚úÖ File keeps full structured logs for debugging
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=DEEPAK-PC\\SQLEXPRESS;Database=LoggingDB;Trusted_Connection=True;TrustServerCertificate=True;", // üëà use LogDbConnection
          "tableName": "Logs",
          "AutoCreateSqlTable": true,
          "restrictedToMinimumLevel": "Warning",
          "columnOptionsSection": { // To add custom columns such as CorrelationId
            // "addStandardColumns": [ "CorrelationId" ] // optional: add CorrelationId column
            //"removeStandardColumns": [ "Properties" ], // optional: remove Properties column if you don't need it
            "additionalColumns": [ // add custom columns like CorrelationId, UserId, etc.
              {
                "ColumnName": "CorrelationId",
                "DataType": "nvarchar",
                "DataLength": 50
              }
            ]
          }

        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}
